########################################################################

CXX=@CXX@
LD=@LD@
RM=@RM@

CXXFLAGS=@CXXFLAGS@ -Wall
LDFLAGS=-r

srcdir=@srcdir@
VPATH=@srcdir@
prefix=@prefix@
libdir=@libdir@

INCDIRS=-I$(srcdir) -I$(srcdir)/../../include
DEFS=@DEFS@
LIBS=

TARGET=dialogue.o

SOURCES=class.cc utils.cc virtual.cc

SUB_DIRS=login monitor

INCLUDES=

OBJECTS=$(SOURCES:.cc=.@OBJEXT@) login/login.o monitor/monitor.o

########################################################################

.PHONY: all subdirs clean dclean

all: subdirs $(TARGET)

$(TARGET): $(OBJECTS)
	$(LD) $(LDFLAGS) -o $@ $(OBJECTS) $(LIBS)

subdirs:
	for d in $(SUB_DIRS); do $(MAKE) -C $$d; done

%.@OBJEXT@: %.cc
	$(CXX) $(CXXFLAGS) $(DEFS) $(INCDIRS) -c $<

clean:
	for d in $(SUB_DIRS); do $(MAKE) -C $$d clean; done
	$(RM) *~ *.@OBJEXT@ $(TARGET)

dclean:
	for d in $(SUB_DIRS); do $(MAKE) -C $$d dclean; done
	$(RM) *~ *.@OBJEXT@ $(TARGET) Makefile

