########################################################################

CXX=@CXX@
LD=@LD@
RM=@RM@

CXXFLAGS=@CXXFLAGS@ -Wall
LDFLAGS=-r

srcdir=@srcdir@
VPATH=@srcdir@
prefix=@prefix@
libdir=@libdir@

INCDIRS=-I$(srcdir) -I$(srcdir)/../include
DEFS=@DEFS@
LIBS=

TARGET=commands.o

SOURCES=

SUB_DIRS=channel connection dcc game general manager user

INCLUDES=

# fix this too.. :(
OBJECTS=$(SOURCES:.cc=.@OBJEXT@) channel/channel.o connection/connection.o \
	dcc/dcc.o game/game.o general/general.o manager/manager.o user/user.o

########################################################################

.PHONY: all subdirs clean dclean

all: $(TARGET)

$(TARGET): subdirs $(OBJECTS)
	$(LD) $(LDFLAGS) -o $@ $(OBJECTS) $(LIBS)

subdirs:
	for d in $(SUB_DIRS); do $(MAKE) -C $$d; done

%.@OBJEXT@: %.cc
	$(CXX) $(CXXFLAGS) $(DEFS) $(INCDIRS) -c $<
	
clean:
	for d in $(SUB_DIRS); do $(MAKE) -C $$d clean; done
	$(RM) *~ *.@OBJEXT@ $(TARGET)

dclean:
	for d in $(SUB_DIRS); do $(MAKE) -C $$d dclean; done
	$(RM) *~ *.@OBJEXT@ $(TARGET) Makefile

