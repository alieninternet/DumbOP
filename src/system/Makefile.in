CXX=@CXX@
LD=@LD@
RM=@RM@

CXXFLAGS=@CXXFLAGS@ -Wall
LDFLAGS=-r

srcdir=@srcdir@
VPATH=@srcdir@
prefix=@prefix@
libdir=@libdir@

INCDIRS=-I$(srcdir) -I$(srcdir)/../include
DEFS=@DEFS@
LIBS=

TARGET=system.o

SOURCES=signals.cc socket.cc

INCLUDES=

OBJECTS=$(SOURCES:.cc=.@OBJEXT@)

########################################################################

all: $(TARGET)

$(TARGET): $(OBJECTS)
	$(LD) $(LDFLAGS) -o $@ $(OBJECTS) $(LIBS)

%.@OBJEXT@: %.cc
	$(CXX) $(CXXFLAGS) $(DEFS) $(INCDIRS) -c $<
	
clean:
	$(RM) *~ *.@OBJEXT@ $(TARGET)

dclean:
	$(RM) *~ *.@OBJEXT@ $(TARGET) Makefile

